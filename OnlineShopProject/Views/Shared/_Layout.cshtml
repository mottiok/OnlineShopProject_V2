<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Home | E-Shopper</title>
    @Styles.Render("~/bundles/css")
    <!--[if lt IE 9]>
        @Scripts.Render("~/bundles/iesupport")
    <![endif]-->
    <script src="https://maps.googleapis.com/maps/api/js"></script>
    <link rel=" shortcut icon" href="~/Content/images/ico/favicon.ico">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="~/Content/images/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="~/Content/images/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="~/Content/images/ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="~/Content/images/ico/apple-touch-icon-57-precomposed.png">
</head><!--/head-->

<body>
    <header id="header">
        <!--header-->
        <div class="header-middle">
            <!--header-middle-->
            <div class="container">
                <div class="row">
                    <div class="col-sm-4">
                        <div class="logo pull-left">
                            <a href="@Url.Action("Index", "Albums")"><img src="~/Content/images/home/logo.png" alt=""/></a>
                        </div>
                        @if (Request.IsAuthenticated)
                        {
                            <div id="currency" class="btn-group pull-right">
                                @{ Html.RenderAction("Index", "Currency"); }
                            </div>
                        }
                    </div>
                    <div class="col-sm-8">
                        <div class="shop-menu pull-right">
                            <ul class="nav navbar-nav">
                                @if (Request.IsAuthenticated)
                                {
                                    <li><a href="@Url.Action("Index", "Orders")"><i class="fa fa-book"></i> Orders History</a></li>
                                    <li><a href="@Url.Action("Create", "Orders")"><i class="fa fa-crosshairs"></i> Checkout</a></li>
                                    <li><a href="@Url.Action("Index", "Carts")"><i class="fa fa-shopping-cart"></i> Shopping Cart</a></li>
                                }
                                @Html.Partial("_LoginPartial")
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div><!--/header-middle-->
        <div class="header-bottom">
        </div><!--/header-bottom-->
    </header><!--/header-->

    @RenderBody()

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/price")
    @Scripts.Render("~/bundles/main")
    @RenderSection("scripts", required: false)
</body>
</html>