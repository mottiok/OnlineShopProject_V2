@model IEnumerable<OnlineShopProject.Models.SongModel>

@{
    ViewBag.Title = "Index";
}

<section>
    <div class="container">
        <div class="row">
            <h2 class="title text-center admin-title">Edit Songs Items</h2>
            @using (Html.BeginForm("FilterIndex", "Songs", FormMethod.Post, new { @id = "search-filter" }))
            {
                @Html.AntiForgeryToken()
                <div class="search_box">
                    <input type="text" placeholder="Search" name="SearchPattern">
                </div>
                <input type="submit" value="Submit" class="hidden"/>
            }
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayName("Album Name")
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Duration)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Album.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Duration)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }

            </table>

        </div>
    </div>
</section>