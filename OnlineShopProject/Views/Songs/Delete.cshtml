@model OnlineShopProject.Models.SongModel

@{
    ViewBag.Title = "Delete";
}

<section>
    <div class="container">
        <h2 class="title text-center admin-title">Delete Song</h2>
        <div class="row">
            <div class="col-sm-12">
                <h3>Are you sure you want to delete this?</h3>
                <div>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <a href="@Url.Action("AdminIndex", "Songs")" class="btn btn-default">Back to List</a>
                            <input type="submit" value="Delete" class="btn btn-danger" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>